{
  "name": "pixadelic/adobe-experience-cloud-php-sdk",
  "description": "An Adobe Experience Cloud API client php implementation",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "Adobe",
    "Experience Cloud",
    "php"
  ],
  "authors": [
    {
      "name": "Alex Druhet",
      "email": "alex@listo.studio"
    }
  ],
  "autoload": {
    "psr-4": {
      "Pixadelic\\Adobe\\": "src/Adobe"
    },
    "classmap": [
      "src/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Pixadelic\\Adobe\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=5.6",
    "symfony/yaml": "^3.4",
    "guzzlehttp/guzzle": "^6.3",
    "symfony/cache": "^3.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^5",
    "squizlabs/php_codesniffer": "^3.2"
  },
  "scripts": {
    "aec-php-sdk-scripts": [
      "./scripts/install.sh"
    ],
    "post-install-cmd": [
      "@aec-php-sdk-scripts"
    ],
    "post-update-cmd": [
      "@aec-php-sdk-scripts"
    ],
    "test": "composer exec phpunit -v"
  }
}
